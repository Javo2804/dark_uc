{
  "manifest_version": 2,
  "name": "DarkUC - Modo Oscuro UC",
  "version": "0.4.7",
  "version_name": "v0.4.7",
  "author": "Javier Z. Avello",
  "description": "Extensión que permite activar Modo Oscuro en plataformas de la UC.",
  "short_name": "Dark UC",
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Configuración Modo Oscuro UC",
    "default_icon": {
      "16": "imagenes/icono/16.png",
      "32": "imagenes/icono/32.png",
      "128": "imagenes/icono/icono.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "popup/config.html",
    "open_in_tab": false
  },
  "permissions": ["storage"],
  "icons": {
    "16": "imagenes/icono/16.png",
    "32": "imagenes/icono/32.png",
    "128": "imagenes/icono/icono.png"
  },
  "content_scripts": [
    {
      "matches": ["https://portal.uc.cl/*"],
      "css": ["css/general.css", "css/portal.css", "css/portal_dark.css"]
    },
    {
      "matches": ["https://sso.uc.cl/*"],
      "css": ["css/general.css", "css/login.css"]
    },
    {
      "matches": ["https://cursos.canvas.uc.cl/*", "https://applications.zoom.us/lti/rich*"],
      "all_frames": true,
      "run_at": "document_start",
      "css": ["css/general.css", "css/canvas.css"],
      "js": ["js/jquery-3.6.0.min.js", "js/canvas.js", "js/canvas_start.js"]
    },
    {
      "matches": ["https://applications.zoom.us/lti/rich*"],
      "all_frames": true,
      "run_at": "document_start",
      "css": ["css/canvas_zoom.css"]
    },
    {
      "matches": ["https://cursos.canvas.uc.cl/*"],
      "all_frames": true,
      "js": ["js/canvas_sidebar.js"]
    },
    {
      "matches": ["https://cursos.canvas.uc.cl/*/assignments*", "https://cursos.canvas.uc.cl/*/quizzes*"],
      "js": ["js/jquery-3.6.0.min.js", "js/canvas_aviso.js"]
    },
    {
      "matches": ["https://ssb.uc.cl/ERPUC/*"],
      "js": ["js/jquery-3.6.0.min.js", "js/banner.js"],
      "css": ["css/banner_ssb.css"],
      "exclude_matches": ["https://ssb.uc.cl/ERPUC/twbkwbis.P_WWWLogin"]
    },
    {
      "matches": ["https://ssb.uc.cl/ERPUC/twbkwbis.P_WWWLogin"],
      "js": ["js/jquery-3.6.0.min.js", "js/banner.js"],
      "css": ["css/banner_ssb_home.css"]
    },
    {
      "matches": ["https://ssb.uc.cl/ERPUC/bwskfreg.P_AltPin", "https://ssb.uc.cl/ERPUC/bwckcoms.P_Regs"],
      "js": ["js/banner_choose_planestudios.js"]
    },
    {
      "matches": ["https://ssb.uc.cl/ERPUC/bwskflib.P_SelDefTerm"],
      "js": ["js/banner_choose_term.js"]
    },
    {
      "matches": ["https://ssb.uc.cl/ERPUC/bvsktess*"],
      "css": ["css/banner_ecdoc.css"]
    }
  ]
}